<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Dossier très facile{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/lib/material-icons-1.0.0.css') }}">
        <link rel="stylesheet" href="{{ asset('css/lib/materialize-1.0.0.min.css') }}">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>
        <nav class="light-blue lighten-1" role="navigation">
            <div class="nav-wrapper container"><a id="logo-container" href="{{ url('index') }}" class="brand-logo">DTF</a>
                <ul class="right hide-on-med-and-down">
                    <li><a href="{{ url('folder') }}"><i class="material-icons">folder</i></a></li>
                    {% if not(app.user) %}
                        <li><a href="{{ url('app_login') }}"><i class="material-icons">home</i></a></li>
                    {% endif %}
                    {% if app.user %}<li><a href="{{ url('app_logout') }}">
                        <li><a href="{{ url('profile') }}"><i class="material-icons">settings</i></a></li>
                        <li><a href="{{ url('app_logout') }}"><i class="material-icons">power_settings_new</i></a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        {% block body %}
            <div class="section no-pad-bot" id="index-banner">
                <div class="container">
                    {% block container %}
                        <br><br>
                        <h1 class="header center blue-text">Dossier-tres-facile</h1>
                        <div class="row center">
                            <h5 class="header col s12 light">Demander des documents n’aura jamais été aussi simple</h5>
                        </div>
                        <div class="row center">
                            <a href="{{ url('createFolder') }}" class="btn-large waves-effect waves-light blue">Créer un dossier</a>
                        </div>
                        <br><br>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </body>

    <!-- Compiled and minified JavaScript -->
    <script src="{{ asset('js/lib/materialize-1.0.0.min.js') }}"></script>
    <script src="{{ asset('js/lib/jquery-3.5.1.min.js') }}"></script>

    {% block javascripts %}{% endblock %}
</html>
